{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="header bg-primary pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Panier</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="{{ path('cart') }}"><i class="fas fa-home"></i></a></li>
                  <li class="breadcrumb-item"><a href="{{ path('cart') }}">Panier</a></li>
                  <li class="breadcrumb-item active" aria-current="page">index</li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-6 col-5 text-right">
              <a href="{{ path('livre_index') }}" class="btn btn-sm btn-neutral">Ajouter Livre ou Panier</a>
            </div>
          </div>
        </div>
      </div>
</div>

 <div class="container-fluid mt--6">
      <!-- Table -->
      <div class="row">
        <div class="col">
          <div class="card">
            <!-- Card header -->
            <div class="card-header">
              <h3 class="mb-0">Votre Panier</h3>

            </div>
            <div class="table-responsive py-4">
              <table class="table table-flush" id="datatable-basic">
                <thead class="thead-light">
                  <tr>
                    <th>Livre</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
                    <th>actions</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                     <th>Livre</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
                    <th>actions</th>
                  </tr>
                </tfoot>
                <tbody>

        {% for item in items %}
            <tr>
                <td>{{ item.livre.titre }}</td>
            <td>{{ item.livre.prix }} DT</td>
            <td>{{ item.nbExemplaires }}</td>
            <td>{{ item.livre.prix * item.nbExemplaires }}</td>
                <td>
            
      
  <a href="{{ path('cart_remove', {'id': item.livre.id})}}" class="fas fa-trash">
                <i class="fa fa-minus"></i>
            </a>
  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
         {% endfor %}
        </tbody>
         <tfoot>
        <tr>
            <td colspan="3" class="text-right"> Total :</td>
            <td>{{ total }} DT</td>
            <td></td>
        </tr>
        </tfoot>
    </table>
     <a href="{{ path('livre_index') }}"><i class="fa fa-shopping-cart"></i> Continuer achats</a>
   



{% endblock %}
