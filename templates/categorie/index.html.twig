{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

<div class="header bg-primary pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Categorie</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="{{ path('categorie_index') }}"><i class="fas fa-home"></i></a></li>
                  <li class="breadcrumb-item"><a href="{{ path('categorie_index') }}">Categorie</a></li>
                  <li class="breadcrumb-item active" aria-current="page">index</li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-6 col-5 text-right">
              <a href="{{ path('categorie_new') }}" class="btn btn-sm btn-neutral">Create new Categorie</a>
            </div>
          </div>
        </div>
      </div>
</div>

 <div class="container-fluid mt--6">
      <!-- Table -->
      <div class="row">
        <div class="col">
          <div class="card">
            <!-- Card header -->
            <div class="card-header">
              <h3 class="mb-0">Liste Categorie</h3>

            </div>
            <div class="table-responsive py-4">
              <table class="table table-flush" id="datatable-basic">
                <thead class="thead-light">
                  <tr>
                    <th>#</th>
                    <th>Designation</th>
                    <th>Description</th>
                    <th>actions</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>#</th>
                    <th>Designation</th>
                    <th>Description</th>
                    <th>actions</th>
                  </tr>
                </tfoot>
                <tbody>
        
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.designation }}</td>
                <td>{{ categorie.description }}</td>
                <td>
                <a    href="{{ path('categorie_show', {'id': categorie.id}) }}" class="table-action table-action-delete" data-toggle="tooltip" data-original-title="Show categorie">

                <i class="far fa-eye"></i>
                </a>
                <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="table-action" data-toggle="tooltip" data-original-title="Edit categorie">
                 <i class="fas fa-user-edit"></i>
                </a>

    {{ include('categorie/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
