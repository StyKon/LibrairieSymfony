{% extends 'base.html.twig' %}

{% block title %}Editeur index{% endblock %}

{% block body %}


<div class="header bg-primary pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Editeur</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="{{ path('editeur_index') }}"><i class="fas fa-home"></i></a></li>
                  <li class="breadcrumb-item"><a href="{{ path('editeur_index') }}">Editeur</a></li>
                  <li class="breadcrumb-item active" aria-current="page">index</li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-6 col-5 text-right">
              <a href="{{ path('editeur_new') }}" class="btn btn-sm btn-neutral">Ajouter Editeur</a>
            </div>
          </div>
        </div>
      </div>
</div>

 <div class="container-fluid mt--6">
      <!-- Table -->
      <div class="row">
        <div class="col">
          <div class="card">
            <!-- Card header -->
            <div class="card-header">
              <h3 class="mb-0">Liste Editeur</h3>

            </div>
            <div class="table-responsive py-4">
              <table class="table table-flush" id="datatable-basic">
                <thead class="thead-light">
                  <tr>
                    <th>#</th>
                    <th>Nom_editeur</th>
                    <th>Pays</th>
                    <th>Adresse</th>
                    <th>Telephone</th>
                    <th>actions</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>#</th>
                    <th>Nom_editeur</th>
                    <th>Pays</th>
                    <th>Adresse</th>
                    <th>Telephone</th>
                    <th>actions</th>
                  </tr>
                </tfoot>
                <tbody>
        {% for editeur in editeurs %}
            <tr>
                <td>{{ editeur.id }}</td>
                <td>{{ editeur.nomEditeur }}</td>
                <td>{{ editeur.pays }}</td>
                <td>{{ editeur.adresse }}</td>
                <td>{{ editeur.telephone }}</td>
                <td>
                 <a    href="{{ path('editeur_show', {'id': editeur.id}) }}" class="table-action table-action-delete" data-toggle="tooltip" data-original-title="Show editeur">

                <i class="far fa-eye"></i>
                </a>
                <a href="{{ path('editeur_edit', {'id': editeur.id}) }}" class="table-action" data-toggle="tooltip" data-original-title="Edit editeur">
                 <i class="fas fa-user-edit"></i>
                </a>
                
    {{ include('editeur/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
